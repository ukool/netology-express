<form method="POST">
    <div class="form-group">
        <label for="title">Название</label>
        <input
            value="<%= book.title %>"
            name="title"
            type="text"
            class="form-control"
            id="title"
            placeholder="Название"
        >
    </div>
    <div class="form-group">
        <label for="authors">Автор</label>
        <input
            value="<%= book.authors %>"
            name="authors"
            type="text"
            class="form-control"
            id="authors"
            placeholder="Автор"
        >
    </div>

    <div class="form-group">
        <label for="authors">Автор</label>
        <input
            name="book"
            type="file"
            class="form-control"
            id="authors"
            placeholder="Автор"
        >
    </div>

    <div class="form-group">
        <label for="description">Описание</label>
        <textarea
            name="description"
            class="form-control"
            id="description"
            rows="3"
        >
            <%= book.description %>
        </textarea>
    </div>
    <div class="form-group text-right ">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>
